    "markdownlint-cli2": "^0.13.0",
    "mermaid": "^10.9.0",
    "prettier": "2.8.8",
    "vue": "^3.4.21",
    "vuepress": "2.0.0-rc.9",
    "vuepress-plugin-search-pro": "2.0.0-rc.37",
